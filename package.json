{
  "name": "webpack-vue-template",
  "description": "A base setup for webpack + Vue projects.",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Charles X. Morrissey",
  "private": true,
  "browserslist": [
    "> 0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scripts": {
    "build": "webpack --config build/webpack.prod.config.js",
    "format": "prettier --write '**/*.{js,vue}'",
    "lint": "eslint --ext .js,.vue build src",
    "lint:fix": "eslint --ext .js,.vue build src --fix",
    "start": "webpack-dev-server --progress --config build/webpack.dev.config.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "lint-staged": {
    "**/*.{js,vue}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "core-js": "3",
    "vue": "^2.5.21"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@vue/test-utils": "^1.0.0-beta.13",
    "autoprefixer": "^9.4.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^1.0.0",
    "css-loader": "^3.4.2",
    "cssnano-preset-advanced": "^4.0.6",
    "eslint": "^5.11.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-formatter-pretty": "^2.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-custom-media": "^7.0.7",
    "postcss-custom-selectors": "^5.1.2",
    "postcss-loader": "^3.0.0",
    "postcss-nesting": "^7.0.0",
    "postcss-normalize": "^7.0.1",
    "postcss-preset-env": "^6.5.0",
    "postcss-pxtorem": "^4.0.1",
    "prettier": "^1.15.3",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^2.3.5",
    "url-loader": "^1.0.1",
    "vue-jest": "^3.0.2",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,vue}"
    ],
    "coverageDirectory": ".jest_coverage",
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  }
}
